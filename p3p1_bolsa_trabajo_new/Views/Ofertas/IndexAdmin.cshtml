<br />
<div class="jumbotron text-center">
    <h2>Ofertas de Empleo</h2>
</div>
<br />
<div class="alert alert-success">@Html.ActionLink("Crear Nueva Oferta", "Create")</div>
<br />
@foreach (var categoria in Model.Categorias)
{
    var contador = 0;
    <h3 class="alert alert-info">@categoria.titulo</h3>
    <table class="table table-bordered table-hover table-responsive">
        <tr>
            <th>Ubicación</th>
            <th>Posición</th>
            <th>Empresa</th>
            <th>Activo</th>
            <th></th>
        </tr>
        @foreach (var oferta in Model.Ofertas)
        {
            if (oferta.id_categoria_ofertas == categoria.id_categoria_ofertas)
            {
                <tr>
                    <td>@oferta.ubicacion</td>
                    <td>@oferta.posicion</td>
                    <td>@oferta.nombre_empresa</td>
                    <td>@oferta.activo</td>
                    <td>@Html.ActionLink("Detalles", "Details", new { id = oferta.id_ofertas })</td>
                    <td>@Html.ActionLink("Editar", "Edit", new { id = oferta.id_ofertas })</td>
                    <td>@Html.ActionLink("Eliminar", "Delete", new { id = oferta.id_ofertas })</td>
                </tr>
            }
            contador++;
        }
    </table>
    <a class="alert alert-success" href="">Ver más...</a>
    contador = 0;
}